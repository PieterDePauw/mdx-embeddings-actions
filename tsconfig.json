{
	"compilerOptions": {
		"target": "es2015",
		"moduleResolution": "node",
		"incremental": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".deprecated/markdown-extra.ts"],
	"exclude": ["node_modules"]
}
